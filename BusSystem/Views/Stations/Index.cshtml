@model IEnumerable<BusSystem.Models.Station>

@{
    ViewData["Title"] = "Stations";
}

<h1>Stations
    <a class="btn btn-success" asp-action="Create"><i class="fa fa-plus"></i> New Station</a>
    </h1>

<p>
    
</p>
<table class="table table-striped table-bordered" id="dataTable" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Control
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-edit"></i></a> 
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ID"><i class="fa fa-eye"></i></a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
