@model BusSystem.Models.Trip

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Trip</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableSeats)
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.AvailableSeats)*@
            @Html.DisplayFor(model => model.AvailableSeatsCount)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Route)*@
            @Html.DisplayNameFor(model => model.RouteToString)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Route.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bus.ID)
        </dd>
    </dl>

    <form asp-action="Delete">
        @if (ViewBag.Message != null)
        {
            <span class="alert alert-warning"> @ViewBag.Message!</span>
        }
        else if (Model.StartDateTime <= DateTime.Now)
        {
            <span class="alert alert-warning">This trip can't deleted ,"it is out of date"!</span>
        }
        else
        {
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
        |<a asp-action="Index">Back to List</a>
    </form>
</div>
